html
	height 100%
	width 100%

body
	font-family font-family-standard
	font-size font-size-standard
	color text-grey
	height 100%
	max-height 100%
	width 100%
	margin 0
	padding 0
	// background linear-gradient(138deg, #3F3C74 0, #00C2FF 120%)

.wrapper
	height 100%
	width 100%
	background-image no-repeat
	background-size cover
for h in (1..6)
	h{h}
		font-size lookup('font-size-h' + h)

::selection
	color black
	background-color lighten(primary-color, 80%)
a
	color text-link
	text-decoration none
	cursor pointer
	&:hover
		color text-link-hover

p, .item
	line-height 1.7em

small
	font-size .875em

strong
	font-weight 700

.search
	text-align center
	padding 22em 0 0 0
	display none
	&.show
		display block
	.sl-title
		padding-bottom .14em
		img
			height .9em
			pointer-events none
	h4
		color #000
		opacity .7
		font-size 1.3em
		letter-spacing -.3px
		padding-bottom 1.5em

.selection
	text-align center
	position relative
	margin-top 1.5em
	& > *
		display inline-block
		vertical-align top
		padding 1px .4em 0 .4em
		font-size 1.1em
	.splitter
		opacity .6
	.select
		color #000
		opacity .5
		transition all .14s ease
		cursor pointer
		letter-spacing .6px
		position relative
		font-weight 500
		&:hover
			opacity .8
		&.selected
			opacity 1

.sub
	opacity .7
	padding 1em 0 .3em 0
	font-weight 400
	font-size 1.6em

.imdbbtn, .reset, .torrent
	display block
	margin-top .8em
	width 100%

.information
	.item
		span
			opacity .6
			margin-right .4em

body.dark
	#results, .crafted, .crafted:hover, .splitter, .selected, .sl-title, p, .title, .sub, .list .item, .genres, .runtime, .horizontal.list li a
		color #fff
	.footer
		border-top 1px solid rgba(#FFF,.08)

body.light
	#results, .crafted, .crafted:hover, .splitter, .selected, .sl-title, p, .title, .sub, .list .item, .genres, .runtime, .horizontal.list li a
		color #1a1d1e
	.footer
		border-top 1px solid rgba(#1a1d1e, .08)

#results
	display none
	.footer
		margin-top 0

#results .within
	padding 9em 0 0 0
	cf()
	h3
		font-weight 700
		font-size 2.6em
		padding 0 0 .5em 0
		span
			font-weight 300
			opacity .6
	a
		padding .9em 0
		font-size 1.3em
		line-height	 1.4em
		& + a
			border-top 1px solid border-gray
		&:hover
			i
				color color-primary
		span
			opacity .6
			font-weight 700
			font-size .8em
			margin-left .3em
		i
			float right
			color border-gray

.header
	.logo
		fixed top 2em left 2em
		opacity .7
		cursor pointer
		transition all .14s ease
		&:hover
			opacity 1
		img
			height 2.6em
			pointer-events none
.footer
	padding 1em 0
	border-top 1px solid border-gray
	margin-top 4em
	.horizontal.list
		li
			display inline-block
			& + li
				margin-left 1.6em
			a
				opacity .6
				&:hover
					opacity 1

#result
	padding 10em 0 0 0
	display none
	.poster
		width 100%
		height 350px
		background-size contain
		background-repeat no-repeat
		background-position center
	h3.title
		font-size 2.6em
		font-weight 700
		padding 0 0 .1em 0
		span
			opacity .6
			font-weight 600
			font-size .8em
	h5.genres
		opacity .6
		margin .4em 0 .2em 0
	.runtime
		font-weight 700
