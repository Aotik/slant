.input
	position relative
	font-size 0
	font-style normal
	input[disabled], &.disabled
		opacity .45
		cursor default
		pointer-events none
	input, textarea
		font-family font-family-standard
		font-size font-size-standard
		color text-grey
		margin 0
		font-size 1em
		max-width 100%
		height em-height
		line-height em-height
		padding 0.79em 1em
		outline 0
		text-align left
		border 0
		border 1px solid background-light-gray
		transition border-color 0.14s ease
		min-width 220px
		background-color #fff

	textarea
		&:not([rows])
			min-height 8em
			max-height 22em
		line-height 1.2em
		min-height 3em
		width 100%
		resize vertical
	&.transparent
		input
			padding 0
			background-color transparent
			border 0
	.go
		color rgba(0,0,0,0.3)
		absolute right 12px top 10px
		transition all 0.2s ease
		cursor pointer
		&:hover
			color primary-color

	&.lg
		font-size font-size-h6
		input
			padding 1em 4em 1em 1.2em
			height 3em
			border 1px solid rgba(0,0,0,0.1)
			width 100%
			&:focus
				border-color primary-color
			&.error
				border-color color-red !important
			+placeholder()
				color #A3CDDB
.action
	input
		border-radius border-radius-normal 0 0 border-radius-normal
		display inline-block
		vertical-align top
		& + .button
			border-radius 0 border-radius-normal border-radius-normal 0
			display inline-block
			vertical-align top
			font-size font-size-standard
	.button
		border-radius border-radius-normal 0 0 border-radius-normal
		display inline-block
		vertical-align top
		font-size font-size-standard
		& + input
			border-radius 0 border-radius-normal border-radius-normal 0
			display inline-block
			vertical-align top
